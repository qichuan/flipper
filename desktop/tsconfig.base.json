{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es7",
      "dom",
      "es2019"
    ],
    "esModuleInterop": true,
    "target": "ES2019",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "allowJs": true,
    "rootDir": ".",
    "paths": {
      "@js-shared/*": [
        "../../js-shared/*"
      ]
    }
  },
  "exclude": [
    "**/lib/",
    "**/dist/",
    "**/node_modules/",
    "**/__tests__/"
  ]
}
